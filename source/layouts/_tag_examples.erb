<!-- 9. Style Variants -->
<div class="tag-group">
  <a href="/tags/tech" class="tag tag--medium tag--square tag--primary">tech</a>
  <a href="/tags/productivity" class="tag tag--medium tag--rounded tag--primary">productivity</a>
