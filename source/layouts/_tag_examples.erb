<!-- Tag Display Examples - For Reference -->

<!-- 1. Basic Tag Group -->
<div class="tag-group">
  <a href="/tags/tech" class="tag tag--medium tag--pill tag--primary">tech</a>
  <a href="/tags/productivity" class="tag tag--medium tag--pill tag--primary">productivity</a>
  <a href="/tags/parenting" class="tag tag--medium tag--pill tag--primary">parenting</a>
</div>

<!-- 2. Tag Cloud with Weights -->
<div class="tag-cloud">
  <a href="/tags/tech" class="tag tag--large tag--rounded tag--primary" data-weight="5">tech</a>
  <a href="/tags/productivity" class="tag tag--large tag--rounded tag--primary" data-weight="4">productivity</a>
  <a href="/tags/parenting" class="tag tag--large tag--rounded tag--primary" data-weight="3">parenting</a>
  <a href="/tags/tesla" class="tag tag--large tag--rounded tag--primary" data-weight="2">tesla</a>
  <a href="/tags/ai" class="tag tag--large tag--rounded tag--primary" data-weight="1">ai</a>
</div>

<!-- 3. Tag with Count -->
<div class="tag-group">
  <a href="/tags/tech" class="tag tag--medium tag--pill tag--primary tag--with-count" data-count="15">tech</a>
  <a href="/tags/productivity" class="tag tag--medium tag--pill tag--primary tag--with-count" data-count="8">productivity</a>
</div>

<!-- 4. Tag with Icon -->
<div class="tag-group">
  <a href="/tags/tech" class="tag tag--medium tag--rounded tag--primary tag--with-icon">tech</a>
  <a href="/tags/productivity" class="tag tag--medium tag--rounded tag--primary tag--with-icon">productivity</a>
</div>

<!-- 5. Removable Tags (for filters) -->
<div class="tag-group">
  <span class="tag tag--medium tag--pill tag--primary tag--removable">
    tech
    <button class="tag-remove" onclick="removeTag(this)"></button>
  </span>
  <span class="tag tag--medium tag--pill tag--primary tag--removable">
    productivity
    <button class="tag-remove" onclick="removeTag(this)"></button>
  </span>
</div>

<!-- 6. Color Variants -->
<div class="tag-group">
  <a href="/tags/tech" class="tag tag--medium tag--pill tag--primary">tech</a>
  <a href="/tags/productivity" class="tag tag--medium tag--pill tag--secondary">productivity</a>
  <a href="/tags/parenting" class="tag tag--medium tag--pill tag--success">parenting</a>
  <a href="/tags/tesla" class="tag tag--medium tag--pill tag--warning">tesla</a>
  <a href="/tags/ai" class="tag tag--medium tag--pill tag--error">ai</a>
</div>

<!-- 7. Tag Filters -->
<div class="tag-filters">
  <span class="tag-filter-label">Filter by:</span>
  <a href="/tags/tech" class="tag tag--small tag--rounded tag--primary">tech</a>
  <a href="/tags/productivity" class="tag tag--small tag--rounded tag--primary">productivity</a>
  <a href="/tags/parenting" class="tag tag--small tag--rounded tag--primary">parenting</a>
</div>

<!-- 8. Size Variants -->
<div class="tag-group">
  <a href="/tags/tech" class="tag tag--small tag--pill tag--primary">tech</a>
  <a href="/tags/productivity" class="tag tag--medium tag--pill tag--primary">productivity</a>
  <a href="/tags/parenting" class="tag tag--large tag--pill tag--primary">parenting</a>
