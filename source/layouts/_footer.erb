<footer class="site-footer redesigned-footer">
  <div class="footer-top-bar"></div>
  <div class="footer-container">
    <div class="footer-content redesigned-footer-content">
      <div class="footer-social">
        <span class="footer-connect-label">Connect:</span>
        <ul class="footer-social-icons">
          <% data.socials.sites.each do |site| %>
            <li>
              <a href="<%= site.url %>" class="footer-social-icon-link" target="_blank" rel="noopener noreferrer" aria-label="<%= site.display_name %>">
                <span class="footer-social-icon"><%= site.icon %></span>
              </a>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="footer-meta">
        <span class="footer-credit">Made with <span aria-label="love">❤️</span>, <a href="https://middlemanapp.com" target="_blank" rel="noopener">Middleman</a>, <a href="https://cursor.sh" target="_blank" rel="noopener">Cursor</a> &amp; <a href="https://claude.ai" target="_blank" rel="noopener">Claude</a></span>
        <span class="footer-copyright">© <%= Time.now.year %> Ritchie Macapinlac</span>
      </div>
    </div>
  </div>
</footer>

